<aura:component controller="CountryState" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="countryList" type="List"/>
    <aura:attribute name="csMap" type="object"/>
    <!--<aura:handler name="render" value="{!this}" action="{!c.onRender}"/>-->

    <div aura:id="parent-aura-div-id">
        <table class="slds-table slds-table_bordered slds-table_col-bordered ">
            <thead>
                <tr>
                    <th style="width:10px;">Row #</th>
                    <th style="width:20px;">State</th>
                    <th style="width:20px;">City</th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.countryList}" var="dataVar" indexVar="index">
                    <tr>
                        <td>{!index+1}</td>
                        <td id="{! index+1 + '_state_td'}">
                            <select class="slds-select" 
                                    id="{!index+1 + '_state'}" 
                                    onchange="{!c.stateChanged}">
                                <aura:iteration items="{!v.countryList}" var="stateVar">
                                    <option text="{!stateVar}" 
                                            />  
                                </aura:iteration>
                            </select>
                        </td>
                        <td id="{!index+1 +'_city_td'}">
                            <select class="slds-select" 
                                    id="{! !index+1 + '_city'}">
                            </select>
                        </td>
                    </tr>
                </aura:iteration>               
            </tbody>
        </table>
    </div>
</aura:component>